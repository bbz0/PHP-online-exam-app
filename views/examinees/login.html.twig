{% extends 'inc/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
	<section class="py-5">
		<div class="container">
			<div class="row">

				{% block msgs %}
					{{ parent() }}
				{% endblock %}

				<div class="col-md-6 mx-auto">
					<h1 class="mb-5">{{ title }}</h1>
					<form action="{{ constant('URLROOT') }}/examinees/login" method="post" onsubmit="return login.login()">
						<div class="card">
							<div class="card-body">
								<div class="form-group">
									<label for="username">Username: <sup>*</sup></label>
									<input class="form-control input--username {% if loginData.error.username %}is-invalid{% endif %}" type="text" name="username" id="username" maxlength="50"
									value="{{ loginData.username }}">
									<span class="invalid-feedback">{{ loginData.error.username }}</span>
								</div>
								<div class="form-group">
									<label for="password">Password: <sup>*</sup></label>
									<input class="form-control input--password {% if loginData.error.password %}is-invalid{% endif %}" type="password" name="password" id="password" maxlength="50">
									<span class="invalid-feedback">{{ loginData.error.password }}</span>
								</div>
								<input type="submit" class="btn btn-success btn-lg login--btn" name="submit" value="Login">
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

{% block javascript %}
	<script type="text/javascript" src="{{ constant('URLROOT') }}/js/login.js"></script>
{% endblock %}
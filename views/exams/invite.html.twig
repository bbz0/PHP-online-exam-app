{% extends 'inc/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
	<section class="py-5">
		<div class="container">

			{% block msgs %}
				{{ parent() }}
			{% endblock %}

			<h1>Invite Examinees</h1>

			<a href="{{ constant('URLROOT') }}/exams/edit/{{ examData.ID }}" class="btn btn-secondary btn-sm my-3">Back</a>

			{% if examinees %}
			<div class="card">
				<div class="card-body">
					<table class="table">
						<thead>
							<tr>
								<th>ID</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Username</th>
								<th>Invite</th>
							</tr>
						</thead>
						<tbody>
							{% for examinee in examinees %}
							<tr>
								<td>{{ examinee.ID }}</td>
								<td>{{ examinee.firstName }}</td>
								<td>{{ examinee.lastName }}</td>
								<td>{{ examinee.username }}</td>
								<td>
									<form action="{{ constant('URLROOT') }}/exams/edit/{{ examData.ID }}/invite" method="post">
										<input type="hidden" name="examineeID" value="{{ examinee.ID }}">
										<input type="submit" name="inviteExaminee" class="btn btn-success" value="Invite Examinee">
									</form>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
					{% else %}
					<p>No other examinees at the moment.</p>
					{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}